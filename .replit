run = "python main.py"
modules = ["python-3.11"]

[deployment]
deploymentTarget = "cloudrun"

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Run FastAPI App"

[[workflows.workflow]]
name = "Run Flask App"
author = 41523520
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Run FastAPI App"
author = 41523520
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn main:app --host 0.0.0.0 --port 5000 --reload"
